@model Medical_Records.Models.ViewModels.LoginViewModel
@*Defined model*@

<h2>Sign In</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @* asp-action="Login" will call login post action method in AccountController *@
            <form id="account" method="post" asp-action="Login" asp-controller="Account">
                <h4>Use your registered email id and password to login.</h4>
                <hr />
                @* asp-validation-summary="All" in oder to add validation I need Scripts{
                    <partial name="_ValidationScriptsPartial" />}  *@
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="UserName"></label>
                    <div class=" col-md-10">
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="Password"></label>
                    <div class=" col-md-10">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">

                    <div class=" col-md-10 offset-md-2 checkbox">
                        <label asp-for="RememberMe" class="pr-4 pl-0">
                            <input type="checkbox" asp-for="RememberMe" />
                        </label>
                        Remember me?
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 offset-md-2">
                        <input type="submit" value="Log in" class="btn btn-success" />
                    </div>
                </div>
                <p class="col-md-10 offset-md-2">
                    <a asp-action="Register">Sign Up</a>
                </p>

            </form>
        </section>
    </div>
</div>

@section Scripts{
    @* for asp-validation-summary="All"*@
    <partial name="_ValidationScriptsPartial" />

}