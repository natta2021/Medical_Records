@model IEnumerable<Medical_Records.Models.ApplicationUser>

<div class="container">
    <h2>My Profile</h2>

    @if (Model.Count() > 0)
    {
        @foreach (var userinfo in Model)
        {
        <div class="card d-inline-flex p-2">
            <h5>UserName: @userinfo.UserName</h5>
            <ul class="list-group list-group-flush">
                <li>Contact Number: @userinfo.PhoneNumber</li>
                <li>Congenital Desease: @userinfo.CongenitalDesease</li>
                <li>Current Medication: @userinfo.CurrentMedication</li>
                <li>Drug Allergy: @userinfo.DrugAllergy</li>
            </ul>
            <a href="#" class="btn btn-primary">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>  
        </div>
        }

     }
     else
     {
      <p>No items created yet</p>
     }
            
</div> 
